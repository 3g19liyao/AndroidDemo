<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <Button
        android:id="@+id/send"
        android:layout_width="192dp"
        android:layout_height="77dp"
        android:layout_marginTop="40dp"
        android:text="Button"
        app:layout_constraintBottom_toTopOf="@+id/send2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.467"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/send2"
        android:layout_width="194dp"
        android:layout_height="95dp"
        android:layout_marginTop="64dp"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="@+id/send"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/send"
        app:layout_constraintTop_toBottomOf="@+id/send" />

    <Button
        android:id="@+id/send3"
        android:layout_width="165dp"
        android:layout_height="90dp"
        android:layout_marginTop="120dp"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/send2"
        app:layout_constraintHorizontal_bias="0.724"
        app:layout_constraintStart_toStartOf="@+id/send2"
        app:layout_constraintTop_toBottomOf="@+id/send2"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button4"
        android:layout_width="181dp"
        android:layout_height="72dp"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/send3"
        app:layout_constraintStart_toStartOf="@+id/send3"
        app:layout_constraintTop_toBottomOf="@+id/send3" />
</androidx.constraintlayout.widget.ConstraintLayout>