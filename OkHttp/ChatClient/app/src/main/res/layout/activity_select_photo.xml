                android:layout_width="140dp"
                android:layout_height="150dp"
                android:src="@drawable/a4"/>
            <ImageView
                android:id="@+id/image5"
                android:layout_weight="1"
                android:layout_width="140dp"
                android:layout_height="150dp"
